        "url": "https://github.com/darth-philou/phn-fp-lib/issues"
    },
    "homepage": "https://github.com/darth-philou/phn-fp-lib#readme",
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.21.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.2"
