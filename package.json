{
    "name": "@darth-philou/phn-fp-lib",
    "version": "1.0.0",
    "description": "Librairie de types abstraits et d'utilitaires pour la programmation fonctionnelle en JavaScript",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "jest",
        "build": "rollup -c",
        "pretty": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/darth-philou/phn-fp-lib.git"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com/"
    },
    "keywords": [
        "JavaScript",
        "Functionnal",
        "ADT"
    ],
    "author": "Philippe Herlin",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/darth-philou/phn-fp-lib/issues"
    },
    "homepage": "https://github.com/darth-philou/phn-fp-lib#readme",
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.21.0",
        "@rollup/plugin-commonjs": "^28.0.2",
        "@rollup/plugin-terser": "^0.4.4",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.2",
        "ramda": "^0.30.1",
        "rollup": "^4.34.8"
    },
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "reporters": [
            "default"
        ],
        "projects": [
            {
                "displayName": "phn-fp-lib",
                "testEnvironment": "node",
                "testMatch": [
                    "<rootDir>/src/**/*.spec.{js,jsx}"
                ],
                "collectCoverageFrom": [
                    "<rootDir>/src/**/*.{js,jsx}"
                ],
                "coverageDirectory": "coverage"
            }
        ]
    },
    "dependencies": {
        "yup": "^1.6.1"
    }
}
